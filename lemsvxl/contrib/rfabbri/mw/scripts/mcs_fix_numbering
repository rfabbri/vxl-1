#!/bin/sh
# to be called inside the curve sketch curves section

num_digits=4
for i in *points.dat; do 
  myn_old=`echo $i | cut -f 3 -d -`;  
  myn=`echo $myn_old |pad $num_digits`;  
  mv rec-3dcurve-$myn_old-points.dat  rec-3dcurve-$myn-points.dat 
  mv rec-3dcurve-$myn_old-tangents.dat  rec-3dcurve-$myn-tangents.dat 
done
